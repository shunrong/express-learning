    <script>
        // ‰ªéHTMLÊï∞ÊçÆÂ±ûÊÄß‰∏≠Ëé∑ÂèñÂèòÈáè
        const taskId = document.body.dataset.taskId ? parseInt(document.body.dataset.taskId) : null;

        // Êõ¥Êñ∞‰ªªÂä°Áä∂ÊÄÅ
        async function updateStatus() {
            const statusSelect = document.getElementById('statusSelect');
            const newStatus = statusSelect.value;
            
            try {
                const response = await fetch(`/api/tasks/${taskId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({ status: newStatus })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    Utils.showAlert('‰ªªÂä°Áä∂ÊÄÅÂ∑≤Êõ¥Êñ∞', 'success', 3000);
                    // Âà∑Êñ∞È°µÈù¢‰ª•ÊòæÁ§∫ÊúÄÊñ∞Áä∂ÊÄÅ
                    setTimeout(() => location.reload(), 1000);
                } else {
                    Utils.showAlert('Êõ¥Êñ∞Â§±Ë¥•: ' + result.error, 'danger');
                }
            } catch (error) {
                console.error('Êõ¥Êñ∞‰ªªÂä°Áä∂ÊÄÅÈîôËØØ:', error);
                Utils.showAlert('ÁΩëÁªúÈîôËØØÔºåËØ∑ÈáçËØï', 'danger');
            }
        }

        // Âø´ÈÄüÊõ¥Êñ∞Áä∂ÊÄÅ
        async function quickUpdateStatus(status) {
            try {
                const response = await fetch(`/api/tasks/${taskId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({ status: status })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    let message = '';
                    switch(status) {
                        case 'in_progress':
                            message = '‰ªªÂä°Â∑≤ÂºÄÂßãÊâßË°å';
                            break;
                        case 'completed':
                            message = '‰ªªÂä°Â∑≤Ê†áËÆ∞‰∏∫ÂÆåÊàê';
                            break;
                        case 'pending':
                            message = '‰ªªÂä°Â∑≤ÈáçÁΩÆ‰∏∫ÂæÖÂºÄÂßã';
                            break;
                    }
                    Utils.showAlert(message, 'success', 3000);
                    // Âà∑Êñ∞È°µÈù¢‰ª•ÊòæÁ§∫ÊúÄÊñ∞Áä∂ÊÄÅ
                    setTimeout(() => location.reload(), 1000);
                } else {
                    Utils.showAlert('Êõ¥Êñ∞Â§±Ë¥•: ' + result.error, 'danger');
                }
            } catch (error) {
                console.error('Âø´ÈÄüÊõ¥Êñ∞Áä∂ÊÄÅÈîôËØØ:', error);
                Utils.showAlert('ÁΩëÁªúÈîôËØØÔºåËØ∑ÈáçËØï', 'danger');
            }
        }

        // Âà†Èô§‰ªªÂä°
        async function deleteTask() {
            if (!confirm('Á°ÆÂÆöË¶ÅÂà†Èô§Ëøô‰∏™‰ªªÂä°ÂêóÔºüÊ≠§Êìç‰Ωú‰∏çÂèØÊí§ÈîÄ„ÄÇ')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/tasks/${taskId}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    Utils.showAlert('‰ªªÂä°Â∑≤Âà†Èô§', 'success', 2000);
                    setTimeout(() => {
                        window.location.href = '/tasks';
                    }, 1000);
                } else {
                    Utils.showAlert('Âà†Èô§Â§±Ë¥•: ' + result.error, 'danger');
                }
            } catch (error) {
                console.error('Âà†Èô§‰ªªÂä°ÈîôËØØ:', error);
                Utils.showAlert('ÁΩëÁªúÈîôËØØÔºåËØ∑ÈáçËØï', 'danger');
            }
        }

        // È°µÈù¢Âä†ËΩΩÊó∂ÁöÑÂ§ÑÁêÜ
        document.addEventListener('DOMContentLoaded', function() {
            // Ê†ºÂºèÂåñ‰ªªÂä°ÊèèËø∞‰∏≠ÁöÑÊç¢Ë°åÁ¨¶
            const descriptionElement = document.querySelector('.task-description');
            if (descriptionElement) {
