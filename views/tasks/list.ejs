<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Express任务管理系统</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-check-square"></i>
                任务管理系统
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">首页</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">仪表盘</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/tasks">我的任务</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/tasks/new">创建任务</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">关于</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                            <%= currentUser.username %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/settings">
                                <i class="bi bi-gear"></i> 设置
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" onclick="logout()">
                                <i class="bi bi-box-arrow-right"></i> 退出登录
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 主要内容区域 -->
    <main class="container mt-4">
        <!-- 页面标题和操作 -->
        <div class="row mb-4">
            <div class="col">
                <h1 class="h2">我的任务</h1>
                <p class="text-muted">管理和跟踪您的所有任务</p>
            </div>
            <div class="col-auto">
                <a href="/tasks/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> 创建新任务
                </a>
            </div>
        </div>

        <!-- 错误信息显示 -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- 搜索和筛选 -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/tasks" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label">搜索任务</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="搜索任务标题或描述..." 
                                   value="<%= filters.search || '' %>">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label for="status" class="form-label">状态</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">全部状态</option>
                            <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>待开始</option>
                            <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>进行中</option>
                            <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>已完成</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="priority" class="form-label">优先级</label>
                        <select class="form-select" id="priority" name="priority">
                            <option value="">全部优先级</option>
                            <option value="high" <%= filters.priority === 'high' ? 'selected' : '' %>>高优先级</option>
                            <option value="medium" <%= filters.priority === 'medium' ? 'selected' : '' %>>中优先级</option>
                            <option value="low" <%= filters.priority === 'low' ? 'selected' : '' %>>低优先级</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="bi bi-funnel"></i> 筛选
                        </button>
                        <a href="/tasks" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> 重置
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- 任务列表 -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-task"></i>
                    任务列表
                    <% if (tasks && tasks.length > 0) { %>
                        <span class="badge bg-secondary ms-2"><%= tasks.length %></span>
                    <% } %>
                </h5>
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-secondary" onclick="selectAll()">
                        <i class="bi bi-check-all"></i> 全选
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="batchDelete()" disabled id="batchDeleteBtn">
                        <i class="bi bi-trash"></i> 批量删除
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <% if (tasks && tasks.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="40">
                                        <input type="checkbox" class="form-check-input" id="selectAllCheckbox" onchange="toggleSelectAll()">
                                    </th>
                                    <th>任务</th>
                                    <th width="100">状态</th>
                                    <th width="80">优先级</th>
                                    <th width="120">创建时间</th>
                                    <th width="150">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tasks.forEach(task => { %>
                                    <tr class="task-item" data-task-id="<%= task.id %>">
                                        <td>
                                            <input type="checkbox" class="form-check-input task-checkbox" value="<%= task.id %>" onchange="updateBatchActions()">
                                        </td>
                                        <td>
                                            <div>
                                                <strong class="<%= task.status === 'completed' ? 'text-decoration-line-through text-muted' : '' %>">
                                                    <%= task.title %>
                                                </strong>
                                                <% if (task.description) { %>
                                                    <br><small class="text-muted">
                                                        <%= task.description.length > 80 ? task.description.substring(0, 80) + '...' : task.description %>
                                                    </small>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <select class="form-select form-select-sm status-select" 
                                                    data-task-id="<%= task.id %>" 
                                                    onchange="updateTaskStatus(this)">
                                                <option value="pending" <%= task.status === 'pending' ? 'selected' : '' %>>待开始</option>
                                                <option value="in_progress" <%= task.status === 'in_progress' ? 'selected' : '' %>>进行中</option>
                                                <option value="completed" <%= task.status === 'completed' ? 'selected' : '' %>>已完成</option>
                                            </select>
                                        </td>
                                        <td>
                                            <% if (task.priority === 'high') { %>
                                                <span class="badge bg-danger">高</span>
                                            <% } else if (task.priority === 'medium') { %>
                                                <span class="badge bg-warning">中</span>
                                            <% } else { %>
                                                <span class="badge bg-info">低</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(task.created_at).toLocaleDateString('zh-CN', {month: 'short', day: 'numeric'}) %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/tasks/<%= task.id %>" class="btn btn-outline-primary" title="查看详情">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/tasks/<%= task.id %>/edit" class="btn btn-outline-secondary" title="编辑">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" title="删除" 
                                                        data-task-id="<%= task.id %>" 
                                                        data-task-title="<%= task.title %>"
                                                        onclick="deleteTaskHandler(this)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- 分页 -->
                    <% if (pagination) { %>
                    <div class="card-footer">
                        <div class="row align-items-center">
                            <div class="col">
                                <small class="text-muted">
                                    显示第 <%= pagination.page %> 页，共 <%= tasks.length %> 条记录
                                </small>
                            </div>
                            <div class="col-auto">
                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <% if (pagination.hasPrev) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.page - 1 %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.priority ? '&priority=' + filters.priority : '' %>">
                                                    <i class="bi bi-chevron-left"></i>
                                                </a>
                                            </li>
                                        <% } %>
                                        <li class="page-item active">
                                            <span class="page-link"><%= pagination.page %></span>
                                        </li>
                                        <% if (pagination.hasNext) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= pagination.page + 1 %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.status ? '&status=' + filters.status : '' %><%= filters.priority ? '&priority=' + filters.priority : '' %>">
                                                    <i class="bi bi-chevron-right"></i>
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <% } %>
                <% } else { %>
                    <div class="p-5 text-center">
                        <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">暂无任务</h4>
                        <% if (filters.search || filters.status || filters.priority) { %>
                            <p class="text-muted">没有找到符合筛选条件的任务</p>
                            <a href="/tasks" class="btn btn-outline-primary">清除筛选</a>
                        <% } else { %>
                            <p class="text-muted">开始创建您的第一个任务吧！</p>
                            <a href="/tasks/new" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> 创建任务
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- 页脚 -->
    <footer class="bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6>Express任务管理系统</h6>
                    <p class="text-muted small">
                        基于Node.js和Express框架构建的全栈任务管理应用
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted small">
                        技术栈: Express.js, SQLite, EJS, Bootstrap
                    </p>
                    <p class="text-muted small">
                        © 2024 Express学习项目
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- 自定义JavaScript -->
    <script src="/js/app.js"></script>
    
    <script>
        // 全选功能
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAllCheckbox');
            const checkboxes = document.querySelectorAll('.task-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
            updateBatchActions();
        }

        function selectAll() {
            const selectAll = document.getElementById('selectAllCheckbox');
            selectAll.checked = true;
            toggleSelectAll();
        }

        // 更新批量操作按钮状态
        function updateBatchActions() {
            const checkboxes = document.querySelectorAll('.task-checkbox:checked');
            const batchDeleteBtn = document.getElementById('batchDeleteBtn');
            batchDeleteBtn.disabled = checkboxes.length === 0;
        }

        // 更新任务状态
        async function updateTaskStatus(selectElement) {
            const taskId = selectElement.dataset.taskId;
            const newStatus = selectElement.value;
            
            try {
                const response = await fetch(`/api/tasks/${taskId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({ status: newStatus })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    Utils.showAlert('任务状态已更新', 'success', 3000);
                    
                    // 更新UI
                    const row = selectElement.closest('tr');
                    const titleElement = row.querySelector('strong');
                    if (newStatus === 'completed') {
                        titleElement.classList.add('text-decoration-line-through', 'text-muted');
                    } else {
                        titleElement.classList.remove('text-decoration-line-through', 'text-muted');
                    }
                } else {
                    Utils.showAlert('更新失败: ' + result.error, 'danger');
                    // 恢复原状态
                    location.reload();
                }
            } catch (error) {
                console.error('更新任务状态错误:', error);
                Utils.showAlert('网络错误，请重试', 'danger');
                location.reload();
            }
        }

        // 删除任务处理器
        function deleteTaskHandler(button) {
            const taskId = parseInt(button.dataset.taskId);
            const taskTitle = button.dataset.taskTitle;
            deleteTask(taskId, taskTitle);
        }

        // 删除单个任务
        async function deleteTask(taskId, taskTitle) {
            if (!confirm(`确定要删除任务"${taskTitle}"吗？此操作不可撤销。`)) {
                return;
            }
            
            try {
                const response = await fetch(`/api/tasks/${taskId}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    Utils.showAlert('任务已删除', 'success', 3000);
                    // 移除表格行
                    document.querySelector(`tr[data-task-id="${taskId}"]`).remove();
                    
                    // 如果没有更多任务，刷新页面
                    if (document.querySelectorAll('.task-item').length === 0) {
                        setTimeout(() => location.reload(), 1000);
                    }
                } else {
                    Utils.showAlert('删除失败: ' + result.error, 'danger');
                }
            } catch (error) {
                console.error('删除任务错误:', error);
                Utils.showAlert('网络错误，请重试', 'danger');
            }
        }

        // 批量删除
        async function batchDelete() {
            const checkboxes = document.querySelectorAll('.task-checkbox:checked');
            if (checkboxes.length === 0) return;
            
            const taskIds = Array.from(checkboxes).map(cb => cb.value);
            
            if (!confirm(`确定要删除 ${taskIds.length} 个任务吗？此操作不可撤销。`)) {
                return;
            }
            
            try {
                const promises = taskIds.map(taskId => 
                    fetch(`/api/tasks/${taskId}`, {
                        method: 'DELETE',
                        credentials: 'include'
                    })
                );
                
                await Promise.all(promises);
                
                Utils.showAlert(`成功删除 ${taskIds.length} 个任务`, 'success', 3000);
                setTimeout(() => location.reload(), 1000);
            } catch (error) {
                console.error('批量删除错误:', error);
                Utils.showAlert('删除失败，请重试', 'danger');
                location.reload();
            }
        }

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            updateBatchActions();
        });
    </script>
</body>
</html>
